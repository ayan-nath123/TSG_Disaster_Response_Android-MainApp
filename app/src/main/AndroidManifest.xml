<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tts.www.tsg_disaster_response_app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.DRApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.Profile"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.MainPage"/>

        <activity android:name=".activity.MainPage"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.LoginActivity"/>

        <activity android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.SplashScreen"/>

        <activity android:name=".activity.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>